<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.edu.udea.compumovil.gr06.shareit.UI.Perfil">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <co.edu.udea.compumovil.gr06.shareit.UI.RoundedImageView
            android:layout_width="210dp"
            android:layout_height="210dp"
            android:layout_marginTop="40dp"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            android:id="@+id/img_perfil" />


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@+id/img_perfil">

            <TextView
                android:text="tu Nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="100dp"
                android:layout_marginTop="50dp"
                android:textAppearance="@android:style/TextAppearance.Holo.Large"
                android:id="@+id/txt_nombre_perfil" />

            <TextView
                android:text="Tu_correo@udea.edu.co"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginStart="90dp"
                android:layout_centerHorizontal="true"
                android:textSize="13sp"
                android:textStyle="italic"
                android:layout_below="@id/txt_nombre_perfil"
                android:id="@+id/txt_correo_perfil" />

            <RatingBar
                android:id="@+id/rating_reputacion"
                android:layout_width="wrap_content"
                android:clickable="false"
                android:numStars="5"
                android:scaleX=".8"
                android:scaleY=".8"
                android:theme="@style/RatingBar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:isIndicator="true"
                android:layout_below="@id/txt_correo_perfil"
                android:layout_marginStart="50dp"
                android:layout_height="wrap_content" />

            <Button
                android:text="@string/btn_cambiarContraseña"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@color/colorPrimary"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:layout_centerHorizontal="true"
                android:textColor="#FFF"
                android:id="@+id/btn_cambiar_contraseña"
                android:layout_marginBottom="40dp"
                android:layout_alignParentBottom="true" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>
